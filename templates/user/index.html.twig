{% extends 'base.html.twig' %}

{% block title %}She Starts Africa{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Lastname</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Programme</th>
                <th>Company</th>
                <th>Linkedin</th>
                <th>Twitter</th>
                <th>Biography</th>
                <th>Status</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.programme }}</td>
                <td>{{ user.company }}</td>
                <td>{{ user.linkedin }}</td>
                <td>{{ user.twitter }}</td>
                <td>{{ user.biography }}</td>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
