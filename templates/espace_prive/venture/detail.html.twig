{% extends 'base.html.twig' %}

{% block body %}
	<div class="main-wrapper">
		{{ include('espace_prive/_header.html.twig')}}
        
		<section class="section-box-2">
        <div class="container-sst">
          <div class="banner-hero banner-image-single">
          <img class="img-banner" src="{{ asset('assets/images/ventures/') }}{{ venture.cover }}" alt="jobbox"><a class="btn-editor" href="#"></a></div>
          <div class="box-company-profile">
            <div class="row mt-10">
              <div class="col-lg-9 col-md-9">
                <h5 class="f-18"> {{ venture.title }} </h5>
              </div>
              <div class="col-lg-12 col-md-12 text-end">
                      <ol class="edu-breadcrumb d-flex justify-content-end liststyle mr-4">
                          <li class="breadcrumb-item"><a href="/">Home</a></li>
                          <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                          <li class="breadcrumb-item active" aria-current="page"> ventures</li>
                          <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                          <li class="breadcrumb-item active" aria-current="page"> {{ venture.title }}</li>
                      </ol>
                </div>
            </div>
          </div>
        </div>
      </section>
        <section class="section-box">
			      <div class="container-sst-f">
                <div class="row mt--60 ventur-row-detail">
                    <div class="col-lg-9 p-5">
                        <h1 class="f-venture">{{ venture.title }}</h1>
                        <p class="descr-venture">
                             {{ venture.description }}
                        </p>
                        
                    </div>
                    <div class="col-lg-3 vent-right text-center">
                       <img class="log-vent" src="{{ asset('assets/images/ventures/') }}{{ venture.flag }}" alt="jobbox">
                    
                        <div class="bloc-detail">
                            <div class="bloc-1">
                               <div class="col-md-6"> 
                               <img class="icon icon-vents" src="{{ asset('assets/images/icons/caland.png') }}">
                                <p class="descrpt">Year of creation: <p class="bloc-p">{{ venture.years|date('Y') }}</p></p>
                               </div>          
                            <div class="col-md-6">
                             <img class="icon icon-vents" src="{{ asset('assets/images/icons/team.png') }}">
                                <p class="descrpt">Founders:<p class="bloc-p">{{ venture.founder }}</p></p></div></div>
                            <div class=" bloc-1">
                            <div class="col-md-6"> <img class="icon icon-vents" src="{{ asset('assets/images/icons/flags.png') }}">
                                <p class="descrpt">Country:<p class="bloc-p">{{ venture.country}}</p></p></div>
                            
                            <div class="col-md-6"> <img class="icon icon-vents" src="{{ asset('assets/images/icons/symbl.png') }}">
                                <p class="descrpt">Field:<p class="bloc-p">{{ venture.sector }}</p></p></div>
                            </div>
                        </div>
                        <div class="ask mt--50">
                          <div class="quote-icon quote-search">
                                <button class="white-box-icon search-trigger header-search">Ask for availability</button>
                            </div>
                        </div>
                        <div class="edu-search-popup">
                            <div class="close-button">
                                <button class="close-trigger"><i class="ri-close-line"></i></button>
                            </div>
                            <div class="inner">
                                {{ form_start(form) }}
                                    <h5 style="font-size: 34px;color: #fff;font-family: 'Convey-Bold';">Your contact request has been sent </h5>
                                    <button type="submit" class="btn btn-training">ok</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        </div>

                        
                    </div>
                </div>
            </div>

        </section>
	   {{ include('home/_partenaires.html.twig')}}
        {{ include('espace_prive/_footer.html.twig')}}
    </div>
{% endblock %}
