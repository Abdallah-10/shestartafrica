{% extends 'base.html.twig' %}

{% block body %}
	<div class="main-wrapper">
		{{ include('espace_prive/_header.html.twig')}}
        
		<section class="section-box-2">
        <div class="container-sst">
          <div class="banner-hero banner-image-single">
          <img class="img-banner" src="{{ asset('assets/images/banner/mentors.png') }}" alt="jobbox"><a class="btn-editor" href="#"></a></div>
          <div class="box-company-profile">
            <div class="row mt-10">
              <div class="col-lg-9 col-md-9">
                <h5 class="f-18"> add new venture </h5>
              </div>
              <div class="col-lg-12 col-md-12 text-end">
                      <ol class="edu-breadcrumb d-flex justify-content-end liststyle mr-4">
                          <li class="breadcrumb-item"><a href="/">Home</a></li>
                          <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                          <li class="breadcrumb-item active" aria-current="page"> ventures</li>
                          <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                          <li class="breadcrumb-item active" aria-current="page"> </li>
                      </ol>
                </div>
            </div>
          </div>
        </div>
      </section>
        <section class="section-box">
			      <div class="container-sst-f">
                   <div class="row mt--60 ">
                    <div class="col-lg-12 p-5">

                        {{ form_start(form) }}
   
                            <div class="col-lg-5">
                                <div class="form-group">
                                  {{ form_row(form.title)  }}
                                </div>
                            </div>

                            <div class="col-lg-5">
                                <div class="form-group">
                                     {{ form_row(form.country)  }}
                                </div>
                            </div>

                            <div class="col-lg-5">
                                <div class="form-group">
                                    {{ form_row(form.sector)  }}
                                </div>
                            </div>

                          
                             <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.address)  }}
                                </div>
                            </div>
                             <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.phone)  }}
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.years)  }}
                                </div>
                            </div>
                              <div class="col-lg-5">
                                <div class="form-group upload-file" >
                                    {{ form_row(form.cover,{'attr': {'accept': 'image/*'}})  }}
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group upload-file">
                                {{ form_row(form.flag ,{'attr': {'accept': 'image/*'}})  }}
                                </div>
                            </div>
                             <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.website)  }}
                                </div>
                            </div>
                             
                            <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.linkedIn)  }}
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.facebook)  }}
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                {{ form_row(form.founder)  }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group p-5">
                                {{ form_row(form.description)  }}
                                </div>
                            </div>
                               
                            <div class="col-lg-5 mt--20">
                                <button class="rn-btn edu-btn w-100" name="submit" type="submit">
                                    <span>Submit Now</span><i class="icon-arrow-right-line-right"></i>
                                </button>
                            </div>
                      {{ form_end(form) }}
                    </div>
                </div>   
            </div>

        </section>
	     {{ include('home/_partenaires.html.twig')}}
        {{ include('espace_prive/_footer.html.twig')}}
    </div>
 <style>  
   form {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
</style>

{% endblock %}
