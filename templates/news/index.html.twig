{% extends 'base.html.twig' %}

{% block title %} SheStartsAfrica{% endblock %}

{% block body %}
<div class="main-wrapper">
    {{ include('home/_header.html.twig')}}

     <section class="section-box-2">
        <div class="container-sst">
          <div class="banner-hero banner-image-single">
          <img class="img-banner" src="{{ asset('assets/images/news/') }}{{ news.cover }}" alt="jobbox"><a class="btn-editor" href="#"></a></div>
          <div class="box-company-profile">
            <div class="row mt-10">
              <div class="col-lg-10 col-md-10">
                <h5 class="f-18">{{ news.title }}</h5>
              </div>
              <div class="col-lg-12 col-md-12 text-lg-end">
                      <ol class="edu-breadcrumb d-flex justify-content-end liststyle">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                             <li class="breadcrumb-item " >News</li>
                            <li class="separator"><i class="ri-arrow-drop-right-line"></i></li>
                             <li class="breadcrumb-item active" >{{ news.title }}</li>
                        </ol>
                </div>
            </div>
          </div>
        </div>
      </section>
      <div class="container">
        <div class="col-lg-12 col-md-12 col-12" data-sal-delay="150" data-sal="slide-up" data-sal-duration="800">
		<h3 class="f-events mt--60">{{ news.title }}</h3>
            <p class="desc-news">{{ news.description }}</p>
            <div class="row">
                <div class="col-md-6">
                    <ul class="social-share">
                        <li><a href="#"><i class="icon-Fb"></i></a></li>
                        <li><a href="#"><i class="icon-linkedin"></i></a></li>
                        <li><a href="#"><i class="icon-instagram"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <p class="news-athr">Published by: {{ news.author}}</p>
                    <p class="news-athr">{{ news.dateAdd|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
      </div>
    {{ include('home/_partenaires.html.twig')}}
    {{ include('home/_footer.html.twig')}}
<style>
  .edu-card.card-type-5 .inner .thumbnail a img {
    height: 250px;
    border-radius: 3px;
}
</style>
{% endblock %}
